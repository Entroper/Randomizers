<div class="checkbox-cell">
	@if (Indent)
	{
		<span class="indent"></span>
	}
		<div class="btn-group-toggle" data-toggle="buttons">
			<input type="radio" name="@Name" value="2" checked="@checked2" hidden>
			<input type="radio" name="@Name" value="1" checked="@checked1" hidden>
			<input type="radio" name="@Name" value="0" checked="@checked0" hidden>
			<button type="button" onclick="@onclick" id="@Id" class="tri-state">@DisplayValue</button>  <label for="@Id" class="@DisabledClass">@ChildContent</label>
		</div>
</div>

@functions
{
	[Parameter]
	private bool? Value { get; set; } = false;
	[Parameter]
	private Action<bool?> ValueChanged { get; set; }
	private bool checked0 => Value ?? false;
	private bool checked1 => !Value ?? false;
	private bool checked2 => Value == null;

	[Parameter]
	private bool Name { get; set; }

	private Char DisplayValue => (Value == false ? 'O' : (Value == true ? 'X' : '?'));
	void onclick()
	{
		if (Value == false)
		{
			Value = true;
		} else if  (Value == true)
		{
			Value = null;
		}
		else
		{
			Value = false;
		}
		ValueChanged(Value);

	}



	[Parameter]
	private bool Indent { get; set; }

	[Parameter]
	private bool IsEnabled { get; set; } = true;
	private string DisabledClass => IsEnabled ? "" : "disabled";

	[Parameter]
	private string Id { get; set; }

	[Parameter]
	private RenderFragment ChildContent { get; set; }

}
