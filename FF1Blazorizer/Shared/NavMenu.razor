@code {
	string VersionString = "";
	protected override void OnInitialized()
	{
		VersionString = FF1Lib.FFRVersion.Version;
		if (FF1Lib.FFRVersion.Branch == "dev")
		{
			VersionString += " Beta";
		}
		else if (FF1Lib.FFRVersion.Branch == "alpha")
		{
			VersionString += " Alpha";
		}
		else
		{
			VersionString = FF1Lib.FFRVersion.Branch;
		}
		StateHasChanged();
	}
}
